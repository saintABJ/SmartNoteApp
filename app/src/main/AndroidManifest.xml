<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.SmartNoteApp">

    <application
        android:name=".MyNoteInfo"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySmartNoteX">
        <activity android:name="com.example.SmartNoteApp.AddSchoolNote">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.SmartNoteApp.AddDiffNote" />

        </activity>
        <activity android:name="com.example.SmartNoteApp.AddDiffNote"/>
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.SmartNoteApp.MainActivity" />

        <activity android:name="com.example.SmartNoteApp.Edit" />

        <activity
            android:name="com.example.SmartNoteApp.Details"/>
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.MySmartNoteX.NoActionBar" />
        <activity android:name="com.example.SmartNoteApp.AddNote">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.SmartNoteApp.AddDiffNote" />
        </activity>
        <activity android:name="com.example.SmartNoteApp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>